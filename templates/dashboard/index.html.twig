{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {{ parent() }}
    <div class='contenido'>
        <h1>Bienvenido {{ user.nickname }}</h1>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="{{ asset('img/parchis1.jpg') }}" alt="First slide, parchís">
                </div>
                <div class="carousel-item">
                     <img class="d-block w-100" src="{{ asset('img/parchis2.jpg') }}" alt="Second slide, parchís">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class='btn-group-vertical btn-block' >
            <a class='btn bg-primary btn-lg text-light my-4' href='{{ path('comming') }}'>Jugar</a>
            <a class='btn bg-primary btn-lg text-light my-4' href='{{ path('tienda') }}'>Tienda</a>
            <a class='btn bg-primary btn-lg text-light my-4' href='{{ path('amigos') }}'>Amigos</a>
        </div>
    
    </div>
{% endblock %}
{% block footer %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}