{% extends 'base.html.twig' %}

{% block title %}Hello AmigosController!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {{ parent() }}


<div class="example-wrapper">
    <h1>{{ controller_name }}! ✅</h1>
    
    <div>
        {% for i in amigos %}
            <div>
                {{ i.nickname }}
                <input type='button' value="Invitar" onclick="{{ path('comming') }}">

            </div>
        {% endfor %}
    </div>
    <div class="">
        <h3>Añadir amigos</h3>
        <form method="post" action="{{ path('busca_amigos') }}">
            <input type='text' name='buscaAmigo' id='buscaAmigo' placeholder='Introduce el nickname'/>
            <input type='submit' name='btnbuscaAmigo' id='btnbuscaAmigo' value='Buscar'/>
        </form>
        <div id="resultado">
            {% for i in resultado %}
                <p>{{ i.nickname }}</p>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
{% block footer %}
    {{ parent() }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('js/myJs.js') }}"></script>
{% endblock %}